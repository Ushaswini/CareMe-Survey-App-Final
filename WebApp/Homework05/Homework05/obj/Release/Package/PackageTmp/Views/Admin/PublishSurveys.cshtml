
@section Scripts {
    @Scripts.Render("~/bundles/PublishSurveys")
    @Scripts.Render("~/bundles/auth")
}

<div class="row">
    <div class="col-sm-12">
        <div class="form-group">
            <label data-bind="value: result" />
        </div>
        <div class="form-group error-messages" data-bind="foreach: errors">
            <p data-bind="text: $data" />
        </div>
    </div>
    <div class="col-sm-12">
        <div class="col" style="float:right; margin:10px">
            <button type="button" class="btn btn-style btn-lg" data-toggle="modal" data-target="#myModal">Add Question</button>
            <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Add Question</h4>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label data-bind="value: result" />
                            </div>
                            <div class="form-group error-messages" data-bind="foreach: errors">
                                <p data-bind="text: $data" />
                            </div>
                        </div>

                        <form data-bind="submit:AddQuestion">
                            <div class="modal-body" style="float:left; clear:both;">

                                <div class="form-row">
                                    <div class="col" style="float:left; margin:10px">
                                        <input type="text" data-bind="value: questionText" class="form-control" placeholder="Question Text">
                                    </div>
                               
                                    <div class="col" style="float:left; margin:10px;">
                                        <select id="questionType" class="form-control">
                                            <option selected disabled>Question type</option>
                                            <option value="0">TextEntry</option>
                                            <option value="1">Choice</option>
                                            <option value="2">Message</option>
                                        </select>
                                    </div>
                                    <div class="col" style="float:left; margin:10px;">
                                        <div id="options" class="col">
                                            <input type="text" data-bind="value: options" class="form-control" placeholder="Comma seperated options">
                                        </div>
                                        
                                        

                                    </div>
                                   
                                </div>
                            </div>
                            <div class="modal-footer">
                                <hr />
                                <button type="submit" class="btn btn-default">Add</button>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-12" style="float:left">
        <h3>Publish Question/Message to Study Group</h3>
        <div class="col" style="float:left; margin:10px">
            <select class="form-control" data-bind="options: studyGroups,
                                                                        optionsCaption: 'Choose study group',
                                                                        optionsText: 'StudyName',
                                                                        optionsValue: 'StudyGroupId',
                                                                        value: selectedStudyGroupForSurvey"></select>
        </div>
        <div class="col" style="float:left; margin:10px">
            <select class="form-control" data-bind="options: questions,
                                                                        optionsCaption: 'Choose question',
                                                                        optionsText: 'QuestionText',
                                                                        optionsValue: 'QuestionId',
                                                                        value: selectedQuestionId"></select>
        </div>
        <div class="col" style="float:left; margin:10px">
           <!-- <form>
                <input type="text" name="txtQuestion" class="form-control" placeholder="Question">
            </form>-->
        </div>
        <div class="col" style="float:left; margin:10px">
            <form>
                <input type="radio" name="frequency" value="0"> Daily
                <input type="radio" name="frequency" value="1"> Hourly
                <input type="radio" name="frequency" value="2"> Twice a Day
            </form>
        </div>
        <div class="col" style="float:left; margin:10px;">
            <form>
                <input type="time" title="time slot" name="time1" value="12" style=" visibility:hidden">
                <input type="time" title="second time slot" name="time2" value="12" style=" visibility:hidden">
            </form>
        </div>
        
    </div>
    <div class="col-sm-12" style="float:left">
        <button style="float:left; margin:10px;height:34px" id="btnPublishQuestion">Publish</button>
    </div>
</div>